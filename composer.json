{
    "repositories":[
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "require": {
        "johnpbloch/wordpress": "^5.1",
        "wpackagist-theme/twentynineteen":"1.3",
        "wpackagist-plugin/acf-contact-form-7":"1.1.5",
        "wpackagist-plugin/regenerate-thumbnails":"3.1.0",
        "wpackagist-plugin/advanced-custom-fields": "5.7.12",
        "wpackagist-plugin/advanced-custom-fields-font-awesome":"3.0.2",
        "wpackagist-plugin/classic-editor":"1.4"
    },
    "require-dev": {
        "wpackagist-plugin/query-monitor":"3.3.4",
        "wpackagist-plugin/simply-show-hooks":"1.2.1",
        "wpackagist-plugin/rewrite-rules-inspector": "1.2.1"

    },
    "extra": {
       "wordpress-install-dir": "wp",
       "installer-paths": {
           "content/themes/{$name}":
           ["type:wordpress-theme"],
           "content/plugins/{$name}":
           ["type:wordpress-plugin"]
       }
    }
}
